@model IEnumerable<HR.DAL.DbLayer.JobTitle>

@{
    ViewBag.Title = "Index";
}

<h2>Items</h2>

<p>
    @Html.ActionLink("Add new item", "Edit", null,
                new { id="btnCreate", @class="btn btn-warning btn-sm"}
    )
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.NameJobTitle)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameJobTitle)
            </td>
            <td>
                @Html.ActionLink("Edit item", "Edit", new { id = item.JobTitleId }) 

              
                @Html.ActionLink("Delete item", "Delete", new { id = item.JobTitleId })
            </td>
        </tr>
    }

</table>
